{
  "name": "theme",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/theme/src",
  "tags": ["scope:theme", "type:app"],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/theme",
        "index": "apps/theme/src/index.html",
        "main": "apps/theme/src/main.ts",
        "tsConfig": "apps/theme/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/theme/public"
          }
        ],
        "styles": ["apps/theme/src/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": ["."]
        },
        "customWebpackConfig": {
          "path": "apps/theme/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/theme/webpack.prod.config.ts"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4205,
        "publicHost": "http://localhost:4205"
      },
      "configurations": {
        "production": {
          "buildTarget": "theme:build:production"
        },
        "development": {
          "buildTarget": "theme:build:development"
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["shell:serve"]
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "theme:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/theme"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "theme:build",
        "port": 4205,
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "theme:build:development"
        },
        "production": {
          "buildTarget": "theme:build:production"
        }
      }
    }
  }
}
